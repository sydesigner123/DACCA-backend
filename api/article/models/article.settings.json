{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Subtitle": {
      "type": "string",
      "required": true
    },
    "Summary": {
      "type": "text",
      "required": true
    },
    "Cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "Body": {
      "type": "richtext"
    },
    "tags": {
      "collection": "tags",
      "via": "Articles",
      "dominant": true
    }
  }
}
